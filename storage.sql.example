SET GLOBAL event_scheduler = ON;


SET FOREIGN_KEY_CHECKS = 0;


DROP TABLE IF EXISTS `application_types`;
DROP TABLE IF EXISTS `database_types`;
DROP TABLE IF EXISTS `role_types`;


DROP TABLE IF EXISTS `databases`;
DROP TABLE IF EXISTS `fence_tracker_registers`;
DROP TABLE IF EXISTS `fence_tracker_triggers`;
DROP TABLE IF EXISTS `query_gateway_queries`;
DROP TABLE IF EXISTS `sigma_cloud_alarm_events`;
DROP TABLE IF EXISTS `users`;

 
DROP EVENT IF EXISTS `delete_sigma_cloud_alarm_events`;
DROP EVENT IF EXISTS `delete_fence_tracker_registers`;


